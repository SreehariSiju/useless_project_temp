#include <Wire.h>
#include <LiquidCrystal_I2C.h>



const int sharpPin = A0;   // Sharp sensor output connected to A0
const int buzzerPin = 12;

void setup() {
  Serial.begin(9600);

  pinMode(sharpPin, INPUT);
  pinMode(buzzerPin, OUTPUT);


}

int getDistance() {
  int analogValue = analogRead(sharpPin);
  int distance = 12343 / (analogValue - 4); // Conversion formula (approximate for Sharp 2Y0A21)
  return distance;
}

void loop() {
  int distance = getDistance();
  Serial.println(distance);
  

  if (distance >= 40) { // Assume no objects if >50cm
   
    tone(buzzerPin, 1000, 200); // Short beep to emphasize the message
    delay(2000);
  } else {
   
  }
  delay(500);
}
